{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
{% endblock %}

	<body class="{{body_class}} tierheim-wrapper justify-center flex-col items-center" data-template="base.twig">
		<main class="tierheim-content">
			{{ function('wp_body_open') }}
			<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
			<header class="header" >
				{% block header %}
					{% include 'header.twig' %}
				{% endblock %}
			</header>
			
			
				<section id="content" role="main" class="content-wrapper">
					{% if title %}<h1>{{title}}</h1>{% endif %}
					<div class="wrapper">
						{% block content %}
							Sorry, no content
						{% endblock %}
					</div>
					{% if sidebar %}
						<aside class="layout-sidebar">
							{{sidebar}}
						</aside>
					{% endif %}
				</section>

			{% block footer %}
				<footer id="footer">
					{% include 'footer.twig' %}
				</footer>
				{{ function('wp_footer') }}
			{% endblock %}
		</main>
	</body>
</html>
